<%= form_tag search_path, method: :get do %>
  <div class="row">
    <div class="col-md-6">
      <%= text_field_tag :search, params[:search], placeholder:"where are you going?", class: "form-control"%>
    </div>
    <div class="col-md-2">
      <%= text_field_tag :start_date, params[:start_date], placeholder:"Start", class: "form-control"%>
    </div>
    <div class="col-md-2">
      <%= text_field_tag :end_date, params[:end_date], placeholder:"End", class: "form-control"%>
    </div>
    <div class="col-md-2">
      <%= submit_tag "Search", class:"btn btn-primary"%>
    </div>

  </div>
    <% end %>
<br>

<div class="text-center">
  <h2>Best places</h2>
  <p>Staff hand picked locations</p>
</div>
<br>
