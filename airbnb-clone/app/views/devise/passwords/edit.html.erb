<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">

    <h2>Change your password</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render 'shared/deviseMessage' %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-group">
          <%= f.password_field :password, autofocus: true, autofocus: true, :class => "form-control",:placeholder => "password" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, autofocus: true, autofocus: true, :class => "form-control",:placeholder => "password confirm" %>
        </div>

        <%= f.submit "Send me reset password instructions" , :class=>"btn btn-primary"%>
    <% end %>
  </div>
</div>






